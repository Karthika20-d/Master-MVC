@model OnlineRealEstateEntity.UserManager

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>SignUp</h2>
@if (ViewBag.Message != null)
{
    Response.Write(ViewBag.Message);
}

<body>
    <h2>SignUp</h2>
    @using (Html.BeginForm("SignUp", "User", FormMethod.Get))
    {
        <table>
            <tr>
                <td>
                    @Html.Label("Name")
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.name)
                    @Html.ValidationMessageFor(model => model.name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Mail-id")
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.email)
                    @Html.ValidationMessageFor(model => model.email)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Phone number")
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.phoneNumber)
                    @Html.ValidationMessageFor(model => model.phoneNumber)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Role")
                </td>
                <td>
                    Buyer @Html.RadioButtonFor(Model => Model.role, "Buyer")
                    Seller @Html.RadioButtonFor(Model => Model.role, "Seller")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Location")

                </td>
                <td>
                    @Html.EnumDropDownListFor(Model => Model.location, "Select Location")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Password")
                    
                </td>
                <td>
                    @Html.TextBoxFor(Model => Model.password)
                    @Html.ValidationMessageFor(model => model.password)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Back", "Index")
                </td>
                <td>
                    <input type="submit" id="=submit" />
                </td>
            </tr>
        </table>
    }

</body>



